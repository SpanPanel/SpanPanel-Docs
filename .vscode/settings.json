{
  "folders.autoExecute": {
    "setupScript": "./scripts/setup-markdownlint.sh"
  },
  "markdownlint.config": {
    "MD013": {
      "line_length": 156,
      "code_blocks": false,
      "tables": false,
      "headings": false
    },
    "MD033": false,
    "MD041": false
  },
  "markdownlint.run": "onSave",
  "files.associations": {
    "*.md": "markdown"
  },
  "editor.rulers": [156],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 156
}
